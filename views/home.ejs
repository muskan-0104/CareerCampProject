<html>
    <head>
        <title>Home</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link href="/css/home.css" rel="stylesheet">
    </head>
    <body style=" color: white;">
      <div class="entry">
       
      </div>
      <div class="data">
      <h5 style="text-align: center;">Students</h5>
        
      <div class="container text-center list" id="student">
          <div class="row header">
            <div class="col">
              <h6>Batch Name</h6>
            </div>
            <div class="col">
              <h6>Company Name</h6>
            </div>
            <div class="col">
              <h6>Student Name</h6>
            </div>
            <div class="col">
              <h6>Status</h6>
            </div>
            <div class="col">
              <h6>DSA Marks</h6>
            </div>
            <div class="col">
              <h6>Frontend Marks</h6>
            </div>
            <div class="col">
              <h6>Backend Marks</h6>
            </div>
            <div class="col">
              <h6>React Marks</h6>
            </div>
            <div class="col">
              <h6>Interview Company</h6>
            </div>
            <div class="col">
              <h6>Edit</h6>
            </div>
           </div> 
            
            <%for (let s of students) {%>
            <div class="row">
              <div class="col">
                <%= s.batch %>
              </div>
              <div class="col">
                <%= s.college %>
              </div>
              <div class="col">
                <%= s.name %>
              </div>
              <div class="col">
                <%= s.status %>
              </div>
              <div class="col">
                <%= s.dsa_marks %>
              </div>
              <div class="col">
                <%= s.frontend_marks %>
              </div>
              <div class="col">
                <%= s.backend_marks %>
              </div>
              <div class="col">
                <%= s.react_marks %>
              </div>
              <div class="col">
                <%for (let interview of s.interview) {%>
                <%= interview.company_name %>
                <%}%>
              </div>
              <div class="col">
                <a href="/student/update/<%= s.id%>">Edit</a>
                <a href="/student/delete/<%= s.id%>">Delete</a>
              </div>
            </div>
            <%}%>
          </div>
          <a href="/student/create"><button class="btn btn-primary add">Add Student</button></a>
          <br>

          <h5  style="text-align: center; margin-top: 5%;">Interviews</h5>
          <div class="container text-center list" id="interview">
            <div class="row  header">
              <div class="col">
                <h6>Company Name</h6>
              </div>
              <div class="col">
                <h6>Student Name</h6>
              </div>
              <div class="col">
                <h6>Interview Date</h6>
              </div>
              <div class="col">
                <h6>Status</h6>
              </div>
              <div class="col">
                <h6>Result</h6>
              </div>
              <div class="col">
                <h6>Edit</h6>
              </div>
             </div> 
            
                <%for (let i of interviews) {%>
                  <div class="row">
                    <div class="col">
                      <%= i.company_name %>
                    </div>
                    <div class="col">
                      <%= i.student.name %>
                    </div>
                    <div class="col">
                      <%= i.interview_date %>
                    </div>
                    <div class="col">
                      <%= i.interview_status %>
                    </div>
                    <div class="col">
                      <%= i.result %>
                    </div>
                    <div  class="col">
                      <a href="/interview/update/<%= i.id%>">Edit</a>
                      <a href="/interview/delete/<%= i.id%>">Delete</a>
                    </div>
                  </div>
                <%}%>
               
          </div>
          <a href="/interview/create"><button class="btn btn-primary add">Create Interviews</button></a>
          <br>
          <a href="/download"><button type="button" class="btn btn-primary download" >Download CSV Report</button></a>          
          <br>
          
          <div class="card mb-3" style="max-width: 540px;margin:auto; ">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/images/mastercard.jpg" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">MasterCard Jobs</h5>
                  <p class="card-text">
                    Mastercard is a global technology company in the payments industry.
                  </p>
                  <p class="card-text"> <a href="/job/">Apply >></a></p>
                </div>
              </div>
            </div>
          </div>
          <br>
         
        </div>

       
    </body>
</html>