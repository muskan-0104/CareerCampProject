<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link href="/css/dropdowns.css" rel="stylesheet">   
    </head>
    <body style=" background-color: #f0e5cc;">
        <form style="margin: 5% auto; width: 50%;" action="/student/update/<%= student.id%>" method="post">
            <div class="mb-3">
              <label for="batch" class="form-label">Batch</label>
              <input type="text" class="form-control" name="batch" value="<%= student.batch%>" required>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" value="<%= student.name%>" required>
            </div>
            <div class="mb-3">
                <label for="college" class="form-label">College</label>
                <input type="text" class="form-control" name="college"value="<%= student.college%>" required>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select name="status" id="status" required>
                    <option value="Placed">Placed</option>
                    <option value="Not Placed">Not Placed</option>
                  </select>
            </div>
            <div class="mb-3">
                <label for="dsa_marks" class="form-label">DSA Marks</label>
                <input type="text" class="form-control" name="dsa_marks" value="<%= student.dsa_marks%>" required>
            </div>
            <div class="mb-3">
                <label for="frontend_marks" class="form-label">Frontend Marks</label>
                <input type="text" class="form-control" name="frontend_marks" value="<%= student.frontend_marks%>" required>
            </div>
            <div class="mb-3">
                <label for="backend_marks" class="form-label">Backend Marks</label>
                <input type="text" class="form-control" name="backend_marks" value="<%= student.backend_marks%>" required>
            </div>
            <div class="mb-3">
                <label for="react_marks" class="form-label">React Marks</label>
                <input type="text" class="form-control" name="react_marks" value="<%= student.react_marks%>" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </body>
</html>